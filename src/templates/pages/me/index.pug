extends ../../layouts/default


block content
  // canvas(id="projector" width="100%" height="100%")="Your browser does not support the Canvas element."
  if profile.bgImage
    div.background-image
      img(src=profile.bgImage)
  main
    header.profile
      div.profile__inner
        if profile.profileImage 
          img.profile__image(src=profile.profileImage)
        if profile.title 
          h1.profile__title!=profile.title
        if profile.subtitle
          h2.profile__subtitle!=profile.subtitle
        div.profile__statement
          each para in profile.statement
            p!= marked(para)
        if profile.channels
          ul.profile__channels
            each val in profile.channels
              li
                a(href=val.href)=val.name 

    section#work.work
      h2.work__heading Work
      ul.projects
        each project in projects
          li.project
            a.project__link(href=project.url, target='_blank')
              h4.project__client=project.client
              h3.project__title=project.title
              
              p.project__description=project.description
